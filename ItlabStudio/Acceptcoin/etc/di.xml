<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
    <!-- Payment Method Facade configuration -->
    <virtualType name="AcceptcoinFacade" type="Magento\Payment\Model\Method\Adapter">
        <arguments>
            <argument name="code" xsi:type="const">ItlabStudio\Acceptcoin\Model\Ui\ConfigProvider::CODE</argument>
            <argument name="formBlockType" xsi:type="string">Magento\Payment\Block\Form</argument>
            <argument name="infoBlockType" xsi:type="string">ItlabStudio\Acceptcoin\Block\Info</argument>
            <argument name="valueHandlerPool" xsi:type="object">AcceptcoinValueHandlerPool</argument>
            <argument name="commandPool" xsi:type="object">AcceptcoinCommandPool</argument>
        </arguments>
    </virtualType>
    <!-- Configuration reader -->
    <virtualType name="AcceptcoinConfig" type="Magento\Payment\Gateway\Config\Config">
        <arguments>
            <argument name="methodCode" xsi:type="const">ItlabStudio\Acceptcoin\Model\Ui\ConfigProvider::CODE</argument>
        </arguments>
    </virtualType>
    <!-- Logger, initialized with Acceptcoin  -->
    <virtualType name="AcceptcoinLogger" type="Magento\Payment\Model\Method\Logger">
        <arguments>
            <argument name="config" xsi:type="object">AcceptcoinConfig</argument>
        </arguments>
    </virtualType>
    <type name="ItlabStudio\Acceptcoin\Gateway\Http\Client\ClientMock">
        <arguments>
            <argument name="logger" xsi:type="object">AcceptcoinLogger</argument>
        </arguments>
    </type>
    <!-- Commands infrastructure -->
    <virtualType name="AcceptcoinCommandPool" type="Magento\Payment\Gateway\Command\CommandPool">
        <arguments>
            <argument name="commands" xsi:type="array">
                <item name="authorize" xsi:type="string">AcceptcoinAuthorizeCommand</item>
            </argument>
        </arguments>
    </virtualType>
    <!-- Authorize command -->
    <virtualType name="AcceptcoinAuthorizeCommand" type="Magento\Payment\Gateway\Command\GatewayCommand">
        <arguments>
<!--            builds an array of provider-specific arguments using the order information.-->
            <argument name="requestBuilder" xsi:type="object">AcceptcoinAuthorizationRequest</argument>
<!--            changes the order and payment status depending on the payment provider response.-->
            <argument name="handler" xsi:type="object">AcceptcoinResponseHandlerComposite</argument>
<!--            creates transfer object from request data, which will be used by Gateway Client to process requests.-->
            <argument name="transferFactory" xsi:type="object">ItlabStudio\Acceptcoin\Gateway\Http\TransferFactory</argument>
<!--            takes the provider-specific arguments and performs a low-level call to the provider.-->
            <argument name="client" xsi:type="object">ItlabStudio\Acceptcoin\Gateway\Http\Client\ClientMock</argument>
        </arguments>
    </virtualType>
    <!-- Authorization Request -->
    <virtualType name="AcceptcoinAuthorizationRequest" type="Magento\Payment\Gateway\Request\BuilderComposite">
        <arguments>
            <argument name="builders" xsi:type="array">
                <item name="transaction" xsi:type="string">ItlabStudio\Acceptcoin\Gateway\Request\AuthorizationRequest</item>
                <item name="mockData" xsi:type="string">ItlabStudio\Acceptcoin\Gateway\Request\MockDataRequest</item>
            </argument>
        </arguments>
    </virtualType>
    <type name="ItlabStudio\Acceptcoin\Gateway\Request\AuthorizationRequest">
        <arguments>
            <argument name="config" xsi:type="object">AcceptcoinConfig</argument>
        </arguments>
    </type>
    <type name="ItlabStudio\Acceptcoin\Gateway\Request\MockDataRequest">
        <arguments>
            <argument name="config" xsi:type="object">AcceptcoinConfig</argument>
        </arguments>
    </type>
    <!-- Capture command -->
    <virtualType name="AcceptcoinCaptureCommand" type="Magento\Payment\Gateway\Command\GatewayCommand">
        <arguments>
            <argument name="handler" xsi:type="object">ItlabStudio\Acceptcoin\Gateway\Response\TxnIdHandler</argument>
            <argument name="transferFactory" xsi:type="object">ItlabStudio\Acceptcoin\Gateway\Http\TransferFactory</argument>
            <argument name="validator" xsi:type="object">ItlabStudio\Acceptcoin\Gateway\Validator\ResponseCodeValidator</argument>
            <argument name="client" xsi:type="object">ItlabStudio\Acceptcoin\Gateway\Http\Client\ClientMock</argument>
        </arguments>
    </virtualType>
    <!-- Void command -->
    <virtualType name="AcceptcoinVoidCommand" type="Magento\Payment\Gateway\Command\GatewayCommand">
        <arguments>
            <argument name="handler" xsi:type="object">ItlabStudio\Acceptcoin\Gateway\Response\TxnIdHandler</argument>
            <argument name="transferFactory" xsi:type="object">ItlabStudio\Acceptcoin\Gateway\Http\TransferFactory</argument>
            <argument name="validator" xsi:type="object">ItlabStudio\Acceptcoin\Gateway\Validator\ResponseCodeValidator</argument>
            <argument name="client" xsi:type="object">ItlabStudio\Acceptcoin\Gateway\Http\Client\ClientMock</argument>
        </arguments>
    </virtualType>
    <!-- Response handlers -->
    <virtualType name="AcceptcoinResponseHandlerComposite" type="Magento\Payment\Gateway\Response\HandlerChain">
        <arguments>
            <argument name="handlers" xsi:type="array">
                <item name="txnid" xsi:type="string">ItlabStudio\Acceptcoin\Gateway\Response\TxnIdHandler</item>
                <item name="fraud" xsi:type="string">ItlabStudio\Acceptcoin\Gateway\Response\FraudHandler</item>
            </argument>
        </arguments>
    </virtualType>
    <!-- Value handlers infrastructure -->
    <virtualType name="AcceptcoinValueHandlerPool" type="Magento\Payment\Gateway\Config\ValueHandlerPool">
        <arguments>
            <argument name="handlers" xsi:type="array">
                <item name="default" xsi:type="string">AcceptcoinValueHandler</item>
            </argument>
        </arguments>
    </virtualType>
    <virtualType name="AcceptcoinValueHandler" type="Magento\Payment\Gateway\Config\ConfigValueHandler">
        <arguments>
            <argument name="configInterface" xsi:type="object">AcceptcoinConfig</argument>
        </arguments>
    </virtualType>
    <type name="ItlabStudio\Acceptcoin\Block\Info">
        <arguments>
            <argument name="config" xsi:type="object">AcceptcoinConfig</argument>
        </arguments>
    </type>
    <preference for="ItlabStudio\Acceptcoin\Api\Web\GetIframeFromSessionInterface" type="ItlabStudio\Acceptcoin\Model\Api\GetIframeFromSession"/>
    <preference for="ItlabStudio\Acceptcoin\Api\Web\CallbackManagementInterface" type="ItlabStudio\Acceptcoin\Model\Api\CallbackManagement"/>
</config>
